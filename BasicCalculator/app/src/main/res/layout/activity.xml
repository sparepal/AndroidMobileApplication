<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/statusBarColor">

    <TextView
        android:id="@+id/textViewDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:editable="false"
        android:gravity="bottom|right"
        android:maxLength="15"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="@android:dimen/app_icon_size"
        tools:background="@android:color/background_light"
        tools:layout_height="180dp"
        tools:layout_width="450dp"
        tools:textSize="30dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView6"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="8" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="7" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textViewDot"
        android:layout_toEndOf="@+id/textView0"
        android:layout_toRightOf="@+id/textView0"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="5" />

    <TextView
        android:id="@+id/textViewDot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView0"
        android:layout_toRightOf="@+id/textView0"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:text="." />

    <TextView
        android:id="@+id/divide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textViewDot"
        android:layout_toRightOf="@+id/textViewDot"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="operatorClicked"
        android:text="/" />

    <TextView
        android:id="@+id/multiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/minus"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="operatorClicked"
        android:text="*" />

    <TextView
        android:id="@+id/textView0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textViewAC"
        android:layout_toRightOf="@+id/textViewAC"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="0" />

    <TextView
        android:id="@+id/plus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="operatorClicked"
        android:text="+" />

    <TextView
        android:id="@+id/minus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/plus"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="operatorClicked"
        android:text="-" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/plus"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="9" />

    <TextView
        android:id="@+id/textViewAC"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:text="AC"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/alert_light_frame"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="numberClicked"
        android:text="4" />

    <Button
        android:id="@+id/equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/divide"
        android:background="@android:color/darker_gray"
        android:text="="
        android:layout_alignTop="@+id/plus"
        android:layout_alignParentBottom="true" />

</RelativeLayout>